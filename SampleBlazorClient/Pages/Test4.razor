@page "/Test4"
<h3>Traffic Light</h3>

<select name="Traffic Light" id="" @bind="TrafficColor" @bind:event="oninput" @onchange="()=> AssessTrafficState()">
    <option value="Select Traffic Light Color" disabled selected> Select Traffic Light Color</option>
    <option value="Red">Red</option>
    <option value="Yellow">Yellow</option>
    <option value="Green">Green</option>
</select>
<h1>
    The car should @CarState.
</h1>
@code {
    public string CarState { get; set; }
    public string TrafficColor { get; set; }

    public void AssessTrafficState()
    {
        if (TrafficColor == "Red" )
        {
            CarState = "stop";
        }
        else if(TrafficColor == "Yellow")
        {
            CarState = "wait";
        }
        else if (TrafficColor == "Green")
        {
            CarState = "go";
        }
    }

}